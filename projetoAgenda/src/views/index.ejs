<%- include('includes/head')%> <%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Agenda!</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>

      <%- include('includes/messages'); %> <% if(contato.length > 0) {%>
      <div class="responsive-table">
        <table class="table">
          <% contato.forEach(contato => { %>
          <tr>
            <td><%= contato.nome %></td>
            <td><%= contato.sobrenome %></td>
            <td><%= contato.telefone %></td>
            <td><%= contato.email %></td>
            <td><a href="contato/index/<%= contato._id %>">Editar</a></td>
            <td>
              <a class="text-danger" href="contato/delete/<%= contato._id %>"
                >Excluir</a
              >
            </td>
          </tr>
          <% }); %>
        </table>
      </div>
      <% } else {%>
      <div class="text-center fw-bold">
        <p class="lead fw-bold">
          Não existem contatos na sua agenda crie um abaixo.
        </p>
        <a
          href="/contato/index"
          class="btn btn-primary"
          tabindex="-1"
          role="button"
          >Cadastre um novo Contato.</a
        >
      </div>
      <% } %>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')%>
