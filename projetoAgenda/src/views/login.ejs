<%- include('includes/head')%> <%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5 flex-column">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>


      <%- include('includes/messages'); %>


      <div class="row">
        <div class="col-lg">
          <h4 class="text-center">Faça seu cadastro</h4>
          <p class="text-center">Se ainda não tem uma conta, crie ela abaixo:</p>

          <form class="form-register" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %> />
            <div class="mb-3">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="mb-3">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password" />
            </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>
        </div>

        <div class="col-lg">
          <h4 class="text-center">Faça login</h4>
          <p class="text-center"> Se você já tem uma conta, faça login abaixo:</p>

          
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %> />
            <div class="mb-3">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="mb-3">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password" />
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>

        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')%>
